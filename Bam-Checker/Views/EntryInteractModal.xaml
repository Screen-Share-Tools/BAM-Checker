<Window x:Class="BamChecker.Views.EntryInteractModal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BamChecker.Views"
        mc:Ignorable="d"
        Background="#151515"
        WindowStyle="None"
        Title="Item - Loading..." Height="575" Width="550">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="4" Width="100" Height="30" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" >
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center">
                            </ContentPresenter>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Foreground" Value="#FFF" />
            <Setter Property="Background" Value="#252525"/>
            <Setter Property="FontSize" Value="15" />

            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#202020" />
                </Trigger>

                <Trigger Property="IsPressed" Value="True">
                    <Trigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <ColorAnimation Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)" 
                                                From="#202020" To="#252525" Duration="0:0:0.1" AutoReverse="True"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.EnterActions>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="{Binding ActualHeight,ElementName=titlebar}" CornerRadius="0" GlassFrameThickness="0" ResizeBorderThickness="4" />
    </WindowChrome.WindowChrome>

    <Border BorderBrush="#808080" CornerRadius="5" BorderThickness=".5">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Header -->
            <DockPanel x:Name="titlebar" LastChildFill="True" Grid.Row="0" Background="{StaticResource AccentBrush}" Height="35" VerticalAlignment="Top" MouseLeftButtonDown="DragWindow">
                <Image Name="WindowIcon" Width="15" Height="15" Margin="20,0,0,0" VerticalAlignment="Stretch" />
                <Grid VerticalAlignment="Stretch">
                    <TextBlock Text="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=Title}" 
                       Foreground="White" 
                       VerticalAlignment="Center" 
                       FontSize="12"
                       Margin="5,0" />
                </Grid>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <StackPanel.Resources>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border CornerRadius="0" Height="30" 
                                Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}">
                                            <ContentPresenter HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  Content="{TemplateBinding Content}"
                                  ContentTemplate="{TemplateBinding ContentTemplate}" />
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Setter Property="Cursor" Value="Hand" />
                            <Setter Property="Foreground" Value="White" />
                            <Setter Property="Background" Value="Transparent" />
                            <Setter Property="FontSize" Value="10" />
                            <Setter Property="FontFamily" Value="Segoe MDL2 Assets" />
                            <Setter Property="BorderThickness" Value="0" />

                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#404040" />
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Trigger.EnterActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <ColorAnimation Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)" 
                                    From="#404040" 
                                    To="Transparent" 
                                    Duration="0:0:1" 
                                    AutoReverse="True" />
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.EnterActions>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </StackPanel.Resources>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="&#xE921;" WindowChrome.IsHitTestVisibleInChrome="True" ToolTip="Minimize" Width="40" VerticalAlignment="Stretch" Click="MinimizeWindow" />
                        <Button Content="&#xE922;" WindowChrome.IsHitTestVisibleInChrome="True" ToolTip="Maximize/Restore" Width="40" VerticalAlignment="Stretch" Click="MaximizeRestoreWindow" />
                        <Button WindowChrome.IsHitTestVisibleInChrome="True" ToolTip="Close" Content="&#xE8BB;" Width="40" VerticalAlignment="Stretch" Click="CloseWindow"/>
                    </StackPanel>
                </StackPanel>
            </DockPanel>

            <StackPanel Orientation="Vertical" Grid.Row="1" Margin="10">
                <StackPanel Orientation="Vertical" Margin="0,0,0,5">
                    <Grid HorizontalAlignment="Stretch">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Image x:Name="FileIcon" Width="40" Grid.Column="0" HorizontalAlignment="Left" Height="40" Margin="10"/>
                        <StackPanel Orientation="Vertical" Grid.Column="1" HorizontalAlignment="Stretch">
                            <TextBlock
                               Text="More Informations:" 
                               HorizontalAlignment="Left" 
                               FontSize="12"
                               VerticalAlignment="Center" 
                               FontWeight="Normal" 
                               Margin="0,0,0,2.5"
                               Foreground="#FFF" />
                            <TextBox 
                             IsReadOnly="True" 
                             Name="moreInfoText" 
                             VerticalAlignment="Center" 
                             Background="#202020" 
                             Foreground="#FFF" 
                             Margin="0,0,2,0"
                             TextWrapping="NoWrap" 
                             Padding="2,4" 
                             AcceptsReturn="False" 
                             BorderBrush="#404040" 
                             BorderThickness="0,0,0,1" />
                        </StackPanel>
                    </Grid>
                    <TextBlock Name="versionText" Grid.Column="0" 
                       Text="Version:"
                       HorizontalAlignment="Left" 
                       FontSize="12" 
                       VerticalAlignment="Center" 
                       FontWeight="Normal" 
                       Margin="0,0,0,2.5"
                       Foreground="#FFF" />
                </StackPanel>

                <StackPanel Margin="0,5,0,0" Orientation="Vertical">
                    <TextBlock Grid.Column="0" 
                       Text="Path:" 
                       HorizontalAlignment="Left" 
                       FontSize="12" 
                       VerticalAlignment="Center" 
                       FontWeight="Normal" 
                       Margin="0,0,0,2.5"
                       Foreground="#FFF" />
                    <Grid VerticalAlignment="Top" Margin="0,2.5,0,0" HorizontalAlignment="Stretch">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBox Grid.Column="0" 
                             IsReadOnly="True" 
                             Name="txtInput" 
                             VerticalAlignment="Center" 
                             Background="#202020" 
                             Foreground="#FFF" 
                             Margin="0,0,2,0" 
                             TextWrapping="NoWrap" 
                             Padding="2,4" 
                             AcceptsReturn="False" 
                             BorderBrush="#404040" 
                             BorderThickness="0,0,0,1" />

                        <Button Grid.Column="1" Margin="2,0,0,0" Width="25" Height="25" Click="Button_Click" >
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border CornerRadius="0.5" Width="20" Height="20" Background="{TemplateBinding Background}" BorderBrush="#404040" BorderThickness="1">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="Cursor" Value="Hand" />
                                    <Setter Property="Foreground" Value="#FFF" />
                                    <Setter Property="Background" Value="#202020"/>
                                    <Setter Property="FontSize" Value="15" />
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#202020" />
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Trigger.EnterActions>
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <ColorAnimation Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)" 
                                                    From="#202020" To="#252525" Duration="0:0:0.1" AutoReverse="True"/>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </Trigger.EnterActions>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            <Button.Content>
                                <Image Source="Assets/Folder_Icon.png" Width="12" Height="12"/>
                            </Button.Content>
                        </Button>
                    </Grid>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Border>
</Window>
